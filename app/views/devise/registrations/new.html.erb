<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 
  <div class="container">
    <h2>Sign up</h2>
                            <div class="form-group">
                                <label for="username">First Name:</label><br>
                                <input autofocus="autofocus" type="text" name="user[first_name]" id="user_first_name" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="username">Last Name:</label><br>
                                <input autofocus="autofocus" type="text" name="user[last_name]" id="user_last_name" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="username">Email:</label><br>
                                <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="password" >Password:</label><br>
                                <input autocomplete="current-password" type="password" name="user[password]" id="user_password" class="form-control" minlength="2" required>
                            </div>
                             <div class="form-group">
                                <label for="password">Password confirmation:</label><br>
                                 <input autocomplete="new-password" type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control" minlength="2" required>
                            </div>
                           
                            <div class="form-group">
                                <label for="remember-me"><span>Remember me</span>Â <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                <input type="submit" name="submit" class="btn" value="Register">
                            </div>
                            <%= render "devise/shared/links" %>
<% end %>
</div>
</div>


